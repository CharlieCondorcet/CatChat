<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/shape_conversation_message"
  android:layout_marginBottom="8dp"
  android:weightSum="6"
  android:orientation="horizontal">

    <TextView
      android:id="@+id/tv_t_new_message_message"
      style="@style/message_title"
      android:layout_width="match_parent"
      android:layout_marginEnd="8dp"
      android:layout_height="wrap_content"
      android:layout_weight="5"
      android:textColor="@color/black" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginEnd="12dp"
      android:layout_weight="1"
      android:orientation="vertical"
      android:textAlignment="textEnd">
        <TextView
          android:id="@+id/tv_t_new_message_user"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/sample_user"
          android:textColor="@color/black"
          android:textSize="12sp"
          tools:ignore="SmallSp" />
        <TextView
          android:id="@+id/tv_t_new_message_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/sample_date"
          android:textColor="@color/black"
          android:textSize="12sp"
          tools:ignore="SmallSp" />
    </LinearLayout>

</LinearLayout>